{
  "name": "jenkins-mcp-server",
  "version": "1.0.0",
  "description": "MCP server that provides Jenkins job management tools and handles job status notifications",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "test": "jest",
    "test:unit": "jest --selectProjects unit",
    "test:integration": "jest --selectProjects integration",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:docker": "jest tests/integration/docker-integration.test.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "docker:build": "docker build -t jenkins-mcp-server .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f jenkins-mcp-server"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "latest",
    "axios": "^1.6.7",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "jenkins": "^1.1.0",
    "joi": "^17.12.2",
    "redis": "^4.6.13",
    "task-master-ai": "^0.23.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/express": "^4.17.21",
    "@types/jenkins": "^1.0.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.19",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "eslint": "^9.33.0",
    "globals": "^16.3.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "supertest": "^6.3.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "mcp",
    "jenkins",
    "server",
    "ci-cd"
  ],
  "author": "",
  "license": "MIT"
}
